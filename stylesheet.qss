/* ============================================== */
/* BL4 Save Editor - Modern Frosted Glass Theme  */
/* Supports Dark/Light mode via ThemeManager     */
/* ============================================== */

/* Global Styles ---------------------------------------------------------- */
QWidget {
    background-color: transparent;
    color: {text_primary};
    font-family: "Microsoft YaHei UI", "PingFang SC", "Helvetica Neue", sans-serif;
    font-weight: bold;
    font-size: 10pt;
}

QMainWindow {
    background-color: transparent;
}

#centralWidget {
    background-color: transparent;
    border-radius: 20px;
}

/* Background layer for frosted glass effect */
#backgroundLayer {
    background-color: transparent;
    border-radius: 20px;
}

#backgroundBlur {
    background-color: transparent;
    border-radius: 20px;
}

#backgroundOverlay {
    background-color: {bg_primary};
    border-radius: 20px;
}

/* Content wrapper with frosted glass effect */
#contentWrapper {
    background-color: {bg_primary};
    border-radius: 20px;
}

/* Header Bar ------------------------------------------------------------ */
#headerBar {
    background-color: {bg_header};
    border-bottom: 1px solid {border_color};
    border-top-left-radius: 20px;
    border-top-right-radius: 20px;
    padding-left: 10px;
}

#titleLabel {
    font-size: 11pt;
    color: {text_primary};
}

#subtitleLabel {
    font-size: 8pt;
    color: {text_secondary};
}

/* Window control buttons */
#headerBar #minimizeButton, #headerBar #maximizeButton, #headerBar #closeButton {
    background-color: transparent;
    border: none;
    color: {text_primary};
    font-size: 16px;
    padding: 4px 10px;
    min-width: 30px;
    min-height: 30px;
    max-height: 30px;
    margin-right: 10px;
}

#headerBar #minimizeButton:hover, #headerBar #maximizeButton:hover {
    background-color: {button_hover};
    border-radius: 0px;
}

#headerBar #closeButton:hover {
    background-color: #e81123;
    color: white;
    border-radius: 0px;
}

/* Header action buttons */
#headerBar QPushButton {
    background-color: {button_bg};
    border: 1px solid {border_color};
    padding: 4px 16px;
    border-radius: 5px;
    min-width: 80px;
    min-height: 30px;
    max-height: 30px;
    color: {text_primary};
}

#headerBar QPushButton:hover {
    background-color: {button_hover};
    border: 1px solid {accent};
}

#headerBar QPushButton:pressed {
    background-color: {button_pressed};
}

#headerBar QPushButton:disabled {
    background-color: {bg_input};
    color: {text_disabled};
}

/* Theme toggle button */
#themeButton {
    background-color: transparent;
    border: 1px solid {border_color};
    padding: 4px 8px;
    border-radius: 5px;
    min-width: 40px;
    max-width: 50px;
    font-size: 14px;
}

#themeButton:hover {
    background-color: {button_hover};
    border: 1px solid {accent};
}

/* Labels ---------------------------------------------------------------- */
QLabel {
    background-color: transparent;
    color: {text_primary};
}

/* Buttons --------------------------------------------------------------- */
QPushButton {
    background-color: {button_bg};
    border: 1px solid {border_color};
    padding: 8px;
    border-radius: 5px;
    color: {text_primary};
}

QPushButton:hover {
    background-color: {button_hover};
    border: 1px solid {accent};
}

QPushButton:pressed {
    background-color: {button_pressed};
    color: white;
}

QPushButton:disabled {
    background-color: {bg_input};
    color: {text_disabled};
}

/* Input Fields ---------------------------------------------------------- */
QLineEdit {
    background-color: {bg_input};
    border: 1px solid {border_color};
    padding: 6px;
    border-radius: 5px;
    color: {text_primary};
}

QLineEdit:focus {
    border: 1px solid {border_focus};
}

QLineEdit:read-only {
    background-color: {bg_secondary};
    color: {text_secondary};
}

QTextEdit, QPlainTextEdit {
    background-color: {bg_input};
    border: 1px solid {border_color};
    border-radius: 5px;
    color: {text_primary};
}

QTextEdit:focus, QPlainTextEdit:focus {
    border: 1px solid {border_focus};
}

/* ComboBox (Dropdown) --------------------------------------------------- */
QComboBox {
    background-color: {bg_input};
    border: 1px solid {border_color};
    padding: 6px;
    border-radius: 5px;
    min-width: 6em;
    color: {text_primary};
}

QComboBox:hover {
    border: 1px solid {accent};
}

QComboBox::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 20px;
    border-left-width: 1px;
    border-left-color: {border_color};
    border-left-style: solid;
    border-top-right-radius: 5px;
    border-bottom-right-radius: 5px;
}

/* Dropdown menu - solid background (no transparency) */
QComboBox QAbstractItemView {
    background-color: {dropdown_bg};
    border: 1px solid {border_color};
    selection-background-color: {selection_bg};
    color: {text_primary};
    outline: none;
}

QComboBox QAbstractItemView::item {
    padding: 6px;
    color: {text_primary};
}

QComboBox QAbstractItemView::item:hover {
    background-color: {button_hover};
}

QComboBox QAbstractItemView::item:selected {
    background-color: {selection_bg};
    color: white;
}

/* Menu ------------------------------------------------------------------ */
QMenu {
    background-color: {dropdown_bg};
    border: 1px solid {border_color};
    border-radius: 5px;
    padding: 5px;
}

QMenu::item {
    padding: 6px 20px;
    color: {text_primary};
    border-radius: 3px;
}

QMenu::item:selected {
    background-color: {selection_bg};
    color: white;
}

/* TreeView -------------------------------------------------------------- */
QTreeView {
    alternate-background-color: {bg_secondary};
    background-color: {bg_panel};
    border: 1px solid {border_color};
    border-radius: 5px;
    color: {text_primary};
}

QTreeView::item {
    padding: 4px;
}

QTreeView::item:selected {
    background-color: {selection_bg};
    color: white;
}

QTreeView::item:hover {
    background-color: {button_hover};
}

QHeaderView::section {
    background-color: {bg_input};
    padding: 4px;
    border: 1px solid {border_color};
    color: {text_primary};
}

/* StackedWidget --------------------------------------------------------- */
QStackedWidget {
    background-color: {bg_primary};
    border: 1px solid {border_color};
    border-radius: 8px;
}

/* ScrollArea ------------------------------------------------------------ */
QScrollArea {
    border: none;
    background-color: transparent;
}

QScrollArea > QWidget > QWidget {
    background-color: transparent;
}

/* ScrollBar ------------------------------------------------------------- */
QScrollBar:vertical {
    border: none;
    background: {scrollbar_bg};
    width: 10px;
    margin: 0;
    border-radius: 5px;
}

QScrollBar::handle:vertical {
    background: {scrollbar_handle};
    min-height: 20px;
    border-radius: 5px;
}

QScrollBar::handle:vertical:hover {
    background: {accent};
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0;
}

QScrollBar:horizontal {
    border: none;
    background: {scrollbar_bg};
    height: 10px;
    margin: 0;
    border-radius: 5px;
}

QScrollBar::handle:horizontal {
    background: {scrollbar_handle};
    min-width: 20px;
    border-radius: 5px;
}

QScrollBar::handle:horizontal:hover {
    background: {accent};
}

QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal {
    width: 0;
}

/* Frame ----------------------------------------------------------------- */
QFrame {
    border: none;
}

/* GroupBox - Frosted Glass Panels --------------------------------------- */
QGroupBox {
    background-color: {bg_panel};
    border: 1px solid {border_color};
    border-radius: 8px;
    margin-top: 10px;
    padding: 12px 8px 8px 8px;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    padding: 0 8px;
    left: 12px;
    color: {text_primary};
}

/* CheckBox -------------------------------------------------------------- */
QCheckBox {
    color: {text_primary};
    spacing: 8px;
}

QCheckBox::indicator {
    width: 18px;
    height: 18px;
    border-radius: 4px;
    border: 1px solid {border_color};
    background-color: {bg_input};
}

QCheckBox::indicator:hover {
    border: 1px solid {accent};
}

QCheckBox::indicator:checked {
    background-color: {accent};
    border: 1px solid {accent};
}

/* RadioButton ----------------------------------------------------------- */
QRadioButton {
    color: {text_primary};
    spacing: 8px;
}

QRadioButton::indicator {
    width: 18px;
    height: 18px;
    border-radius: 9px;
    border: 1px solid {border_color};
    background-color: {bg_input};
}

QRadioButton::indicator:hover {
    border: 1px solid {accent};
}

QRadioButton::indicator:checked {
    background-color: {accent};
    border: 1px solid {accent};
}

/* SpinBox --------------------------------------------------------------- */
QSpinBox, QDoubleSpinBox {
    background-color: {bg_input};
    border: 1px solid {border_color};
    border-radius: 5px;
    padding: 4px;
    color: {text_primary};
}

QSpinBox:focus, QDoubleSpinBox:focus {
    border: 1px solid {border_focus};
}

/* TabWidget ------------------------------------------------------------- */
QTabWidget::pane {
    border: 1px solid {border_color};
    border-radius: 5px;
    background-color: {bg_panel};
}

QTabBar::tab {
    background-color: {button_bg};
    border: 1px solid {border_color};
    padding: 8px 16px;
    margin-right: 2px;
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
    color: {text_primary};
}

QTabBar::tab:selected {
    background-color: {accent};
    color: white;
}

QTabBar::tab:hover:!selected {
    background-color: {button_hover};
}

