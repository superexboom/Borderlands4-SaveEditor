/* ============================================== */
/* Navigation Sidebar - Solid Background          */
/* ============================================== */

#nav_bar, #nav_bar_collapsed {
    background-color: {sidebar_bg};
}

#nav_bar QPushButton, #nav_bar_collapsed QPushButton {
    background-color: transparent;
    border: none;
    border-radius: 6px;
    padding: 18px 8px;
    text-align: left;
    padding-left: 5px;
    color: {text_primary};
}

#nav_bar QPushButton:hover, #nav_bar_collapsed QPushButton:hover {
    background-color: {button_hover};
}

#nav_bar QPushButton:checked, #nav_bar_collapsed QPushButton:checked {
    background-color: {accent};
    border: 1px solid {accent_hover};
    color: white;
}

#nav_bar QPushButton:checked:hover, #nav_bar_collapsed QPushButton:checked:hover {
    background-color: {accent_hover};
}

#nav_bar_collapsed QPushButton {
    text-align: center;
    text-indent: 0px;
    padding: 18px 0px;
    margin: 0px;
}

/* Toggle Button */
#toggleButton {
    background-color: transparent;
    border: none;
    color: {text_secondary};
    padding: 5px;
}

#toggleButton:hover {
    background-color: {button_hover};
}

#toggleButton:pressed {
    background-color: {accent};
}

/* ============================================== */
/* Footer                                          */
/* ============================================== */

#footer {
    background-color: transparent;
    border-bottom-left-radius: 20px;
    border-bottom-right-radius: 20px;
}

#statusLabel {
    color: {text_secondary};
    font-size: 9pt;
}

/* ============================================== */
/* Size Grip                                       */
/* ============================================== */

QSizeGrip {
    width: 16px;
    height: 16px;
    background-color: transparent;
    border: none;
}

/* ============================================== */
/* Dialog Boxes                                    */
/* ============================================== */

QMessageBox, QInputDialog, QDialog {
    background-color: {dropdown_bg};
    color: {text_primary};
}

QMessageBox QPushButton, QInputDialog QPushButton, QDialog QPushButton {
    min-width: 80px;
}

QDialogButtonBox QPushButton {
    min-width: 80px;
}

/* ============================================== */
/* Weapon Editor Add Part Category                 */
/* ============================================== */

#addPartCategoryFrame {
    background-color: {bg_panel};
    border: 1px solid {border_color};
    border-radius: 5px;
    color: {text_primary};
}

#addPartCategoryFrame QLabel {
    color: {text_primary};
}

#addPartCategoryFrame QCheckBox {
    color: {text_primary};
}

#addPartToggleBtn {
    background-color: {button_bg};
    border: none;
    border-radius: 4px;
    font-size: 12px;
    color: {text_primary};
}

#addPartToggleBtn:hover {
    background-color: {button_hover};
}

/* Add Part Title Label - theme-aware text color for readability */
#addPartTitleLabel {
    color: {text_primary};
    font-weight: bold;
    font-size: 12px;
}

/* Add Part Dialog Window - solid background */
#addPartDialog {
    background-color: {button_bg};
}

#addPartDialog QScrollArea {
    border: 1px solid {border_color};
    border-radius: 5px;
}

#addPartDialogHeader {
    font-size: 14px;
    font-weight: bold;
    color: {accent};
    padding: 5px 0;
}

